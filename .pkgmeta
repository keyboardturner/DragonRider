package-as: DragonRider
enable-nolib-creation: yes

license-output: LICENSE

externals:
  Libs/LibStub: https://repos.wowace.com/wow/libstub/trunk
  Libs/LibAdvFlight-1.0: https://github.com/Ghostopheles/LibAdvFlight
  Libs/Ace3: https://repos.curseforge.com/wow/ace3/trunk
  Libs/LibDBIcon-1.0: https://repos.curseforge.com/wow/libdbicon-1-0/trunk

ignore:
  - Libs/*/*.rockspec
  - Libs/*/*.toc
  - Libs/*/changelog.*
  - Libs/*/CHANGELOG.*
  - Libs/*/docs
  - Libs/*/examples
  - Libs/*/README.*
  - Libs/*/tests
  - Libs/*/.pkgmeta
  - CHANGELOG.md
  - README.md

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown