package-as: DragonRider
enable-nolib-creation: yes

license-output: LICENSE

embedded-libraries:
  - libadvflight

externals:
  Libs/LibStub: https://repos.wowace.com/wow/libstub/trunk
  Libs/LibAdvFlight: https://github.com/Ghostopheles/LibAdvFlight

ignore:
  - Libs/*/*.rockspec
  - Libs/*/*.toc
  - Libs/*/changelog.*
  - Libs/*/CHANGELOG.*
  - Libs/*/docs
  - Libs/*/examples
  - Libs/*/README.*
  - Libs/*/tests
  - Libs/*/.pkgmeta
  - CHANGELOG.md
  - README.md

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown